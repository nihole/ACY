<?xml version="1.0" encoding="UTF-8"?>
<polUni>
	{%if not action=="ignore"%}
	<fvTenant descr="" name="{{tenant}}">
		{% for i in l3outs %}
                {% set action %}{%if i.action%}{{i.action}}{%else%}{{global.action}}{%endif%}{% endset %}
                {% set description %}{%if i.description%}{{i.description}}{%else%}{{global.description}}{%endif%}{% endset %}
		{%if not action=="ignore"%}
		<l3extOut descr="" name="{{i.l3out}}" action="{{action}}">
			{% for l in i.l3out_node_profiles %}
                	{% set action %}{%if l.action%}{{l.action}}{%else%}{{global.action}}{%endif%}{% endset %}
                	{% set description %}{%if l.description%}{{l.description}}{%else%}{{global.description}}{%endif%}{% endset %}
                	{%if not action=="ignore"%}
			
			<l3extLNodeP descr="" name="{{l.name}}" tag="yellow-green" targetDscp="unspecified" status="{{action}}">
				{% for j in l.nodes %}
				{% set action %}{%if j.action%}{{j.action}}{%else%}{{global.action}}{%endif%}{% endset %}
				{%if not action=="ignore"%}
				<l3extRsNodeL3OutAtt rtrId="{{j.router_id}}" rtrIdLoopBack="yes" tDn="topology/pod-1/node-{{j.node_id}}" action="{{action}}" />
				{%endif%}{%endfor%}
				
				{% for n in l.l3out_int_profilces %}
                                {% set action %}{%if n.action%}{{n.action}}{%else%}{{global.action}}{%endif%}{% endset %}
				{%if not action=="ignore"%}
				{% set pod_id %}{%if n.pod_id%}{{n.pod_id}}{%else%}{{global.pod_id}}{%endif%}{% endset %}
				{% set ospf_interface_policy %}{%if n.ospf_interface_policy%}{{n.ospf_interface_policy}}{%else%}{{global.ospf_interface_policy}}{%endif%}{% endset %}
				<l3extLIfP descr="" name="{{n.name}}" tag="yellow-green" status="{{action}}">

					<ospfIfP authKey = "" authKeyId="1" authType="md5" descr="" name="">
			  			<ospfRsIfPol tnOspfIfPolName="{{ospf_interface_policy}}"/>
					</ospfIfP>
					<l3extRsNdIfPol tnNdIfPolName="" />
					<l3extRsPathL3OutAtt addr="0.0.0.0" descr="" encap="vlan-{{n.vlan_id}}" encapScope="local" ifInstT="ext-svi" llAddr="::" mode="regular" mtu="1500" tDn="topology/pod-{{pod_id}}/protpaths-{{n.left_node_id}}-{{n.right_node_id}}/pathep-{{n.int_pol_group}}" targetDscp="unspecified">
			  			<l3extMember addr="{{n.svi_1}}" descr="" llAddr="::" name="" side="A" />
			  			<l3extMember addr="{{n.svi_2}}" descr="" llAddr="::" name="" side="B" />
					</l3extRsPathL3OutAtt>
				</l3extLIfP>
				{%endif%}{%endfor%}
			</l3extLNodeP>
			{%endif%}{%endfor%}
		</l3extOut>
		{%endif%}{%endfor%}
	</fvTenant>
	{%endif%}
</polUni>
